{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A gallery of maps showcasing different cartographic projections.",
  "autosize": "pad",

  "signals": [
    { "name": "mapWidth", "value": 600},
    { "name": "mapHeight", "value": 400},
    { "name": "projScale", "value": 45},
    { "name": "projTranslate", "update": "[mapWidth / 2, mapHeight / 2]" },
    {
      "name": "ColorAs",
      "value": "Democracy",
      "bind": {
        "input": "select",
        "options": ["Bronze",
          "Colonies",
          "Delian L",
          "Democracy",
          "Elevation m",
          "Grid",
          "Hellenicity",
          "In/out",
          "Koinon",
          "Polisity",
          "Proxenoi",
          "Region #",
          "Silver",
          "Victors",
          "Walls",
          "area 1",
          "area 2",
          "polis#",
          "prom 1",
          "prom 2",
          "prom 3",
          "staseis"
        ]
      }
    }
  ],

  "data": [
    {
      "name": "projections",
      "values": [
        {"type":"mercator","scale":800,"center":[34,36], "label": "Mediterranean"},
        {"type":"mercator","scale":2000,"center":[30,36], "label": "Aegean"}
      ]
    },
    {
      "name": "world",
      "url": "data/earth-coastlines-10km.geo.json"
    },
    {
      "name": "sphere",
      "values": [{"type": "Sphere"}]
    },
    {
      "name": "labelOffsets",
      "values": [
        {"dx": -1, "dy": -1},
        {"dx": -1, "dy": 1},
        {"dx": 1, "dy": -1},
        {"dx": 1, "dy": 1}
      ]
    },
    {
      "name": "polis",
      "url": "data/polis.json",
      "format": {
        "type": "json",
        "property": "features"
      },
      "transform": [
        {"type":"filter",
          "expr":"datum.properties['staseis']>-1"},
        {
          "type":"formula",
          "as": "chosen",
          "expr": "datum.properties[ColorAs]"
        }
      ]
    },
    {
      "name": "binned",
      "source": "polis",
      "transform": [
        {
          "type": "extent", "field": "chosen",
          "signal": "chosen_extent"
        },
        {
          "type": "bin",
          "signal": "bins",
          "field": "chosen",
          "maxbins": 15,
          "extent": {"signal": "chosen_extent"}
        },
        {
          "type": "aggregate",
          "key": "bin0", "groupby": ["bin0", "bin1"],
          "fields": ["bin0"], "ops": ["count"], "as": ["count"]
        }
      ]
    }
  ],

  "layout": {
    "columns": 2,
    "padding": 10
  },
  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": {"data": "polis", "field": "chosen"},
      "range": {"scheme": "category10","count": 5}
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {"data": "projections"},

      "signals": [
        {"name": "width", "update": "mapWidth"},
        {"name": "height", "update": "mapHeight"}
      ],

      "encode": {
        "enter": {
          "width": {"signal": "mapWidth"},
          "height": {"signal": "mapHeight"},
          "clip": {"value": true}
        }
      },

      "projections": [
        {
          "name": "projection",
          "type": {"signal": "parent.type"},
          "scale": {"signal": "parent.scale"},
          "center": {"signal": "parent.center"}
        }
      ],

      "marks": [
        {
          "type": "rect",
          "zindex": 2,
          "encode": {
            "enter": {
              "width": {"signal": "width"},
              "height": {"signal": "height"},
              "fill": {"value": "transparent"},
              "stroke": {"value": "white"},
              "strokeOpacity": {"value": 1},
              "strokeWidth": {"value": 1}
            }
          }
        },
        {
          "type": "shape",
          "from": {"data": "sphere"},
          "encode": {
            "enter": {
              "fill": {"value": "Black"}
            }
          },
          "transform": [
            { "type": "geoshape", "projection": "projection" }
          ]
        },
        {
          "type": "shape",
          "from": {"data": "world"},
          "clip": {"sphere": "projection"},
          "encode": {
            "enter": {
              "strokeWidth": {"value": 1},
              "stroke": {"value": "#888"},
              "fill": {"value": "Black"}
            }
          },
          "transform": [
            { "type": "geoshape", "projection": "projection" }
          ]
        },
        {
          "type": "shape",
          "from": {"data": "polis"},
          "encode": {
            "enter": {
              "tooltip": {"signal": "{'Polis': datum.properties.Name}"}
            },
            "update": {
              "opacity": {"value": 1},
              "fill": {"scale": "color", "field": "chosen"}

            }
          },
          "transform": [
            {
              "type": "geoshape",
              "projection": "projection",
              "pointRadius":2
            }
          ]
        },
        {
          "type": "text",
          "from": {"data": "labelOffsets"},
          "encode": {
            "enter": {
              "fill": {"value": "white"},
              "dx": {"field": "dx"},
              "dy": {"field": "dy"},
              "x": {"value": 5},
              "y": {"signal": "mapHeight - 5"},
              "baseline": {"value": "bottom"},
              "fontSize": {"value": 14},
              "fontWeight": {"value": "bold"},
              "text": {"signal": "parent.label"}
            }
          }
        },
        {
          "type": "text",
          "encode": {
            "enter": {
              "fill": {"value": "black"},
              "x": {"value": 5},
              "y": {"signal": "mapHeight - 5"},
              "baseline": {"value": "bottom"},
              "fontSize": {"value": 14},
              "fontWeight": {"value": "bold"},
              "text": {"signal": "parent.label"}
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "scatter",
      "style": "cell",
      "from": {
        "facet": {"name": "facet", "data": "polis", "groupby": "Group1"}
      },
      "signals": [
        {"name": "width", "update": "mapWidth"},
        {"name": "height", "update": "mapHeight"}
      ],

      "encode": {
        "enter": {
          "width": {"signal": "mapWidth"},
          "height": {"signal": "mapHeight"}
        }
      },
      "marks": [
        {
          "type": "rect",
          "encode": {
            "enter": {
              "width": {"signal": "width"},
              "height": {"signal": "height"},
              "fill": {"value": "black"}
            }
          }
        },
        {
          "name": "marks",
          "zindex": 2,
          "type": "symbol",
          "from": {"data": "polis"},
          "encode": {
            "update": {
              "x": {"scale": "x_scatter", "field": "chosen"},
              "y": {"scale": "y_scatter", "field": "properties.staseis"},
              "shape": {"value": "circle"},
              "strokeWidth": {"value": 2},
              "opacity": {"value": 0.5},
              "stroke": {"value": "#4682b4"},
              "fill": {"value": "transparent"}
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "x_scatter",
          "grid": true,
          "zindex": 1,
          "domain": false,
          "orient": "bottom",
          "tickCount": 5,
          "title": {"signal": "ColorAs"},
          "titleColor": "white",
          "labelColor": "white"
        },
        {
          "scale": "y_scatter",
          "grid": true,
          "zindex": 1,
          "domain": false,
          "orient": "left",
          "titlePadding": 5,
          "title": "Staseis",
          "titleColor": "white",
          "labelColor": "white"
        }
      ],
      "scales": [
        {
          "name": "x_scatter",
          "type": "linear",
          "round": true,
          "nice": true,
          "zero": true,
          "domain": {"data": "polis", "field": "chosen"},
          "range": "width"
        },
        {
          "name": "y_scatter",
          "type": "linear",
          "round": true,
          "nice": true,
          "zero": true,
          "domain": {"data": "polis", "field": "properties.staseis"},
          "range": "height"
        }
      ]
    },
    {
      "type": "group",
      "name": "bar",
      "style": "cell",
      "from": {
        "facet": {"name": "facet", "data": "polis", "groupby": "Group1"}
      },
      "signals": [
        {"name": "width", "update": "mapWidth"},
        {"name": "height", "update": "mapHeight"}
      ],

      "encode": {
        "enter": {
          "width": {"signal": "mapWidth"},
          "height": {"signal": "mapHeight"}
        }
      },
      "marks": [
        {
          "type": "rect",
          "encode": {
            "enter": {
              "width": {"signal": "width"},
              "height": {"signal": "height"},
              "fill": {"value": "black"}
            }
          }
        },
        {
          "type": "rect",
          "from": {"data": "binned"},
          "zindex": 1,
          "encode": {
            "update": {
              "x": {"scale": "xscale", "field": "bin0"},
              "x2": {"scale": "xscale", "field": "bin1"},
              "y": {"scale": "yscale", "field": "count"},
              "y2": {"scale": "yscale", "value": 0},
              "fill": {"value": "steelblue"},
              "stroke": {"value": "black"},
              "strokeOpacity": {"value": 1},
              "strokeWidth": {"value": 0.25}

            },
            "hover": {
              "fill": {"value": "red"}
            },
            "enter": {
              "tooltip": {"signal": "{'Number of Poleis': datum.count}"}
            }
          }
        }
      ],
      "axes": [
        {
          "orient": "bottom",
          "scale": "xscale",
          "title": {"signal": "ColorAs"},
          "zindex": 2,
          "titleColor": "white",
          "labelColor": "white"
        },
        {
          "orient": "left",
          "scale": "yscale",
          "title": "Number of Poleis",
          "tickCount": 5,
          "zindex": 2,
          "titleColor": "white",
          "labelColor": "white"
        }
      ],
      "scales": [
        {
          "name": "xscale",
          "type": "linear",
          "range": "width",
          "domain": {"signal": "[bins.start, bins.stop]"},
          "bins": {"signal": "bins"}
        },
        {
          "name": "yscale",
          "type": "linear",
          "range": "height",
          "round": true,
          "domain": {"data": "binned", "field": "count"},
          "zero": true,
          "nice": true
        }
      ]
    }
  ],
  "legends": [
    {
      "title": {"signal": "ColorAs"},
      "titleColor":"white",
      "fill": "color",
      "orient": "bottom",
      "offset": 5,
      "type": "gradient",
      "gradientLength": 300,
      "gradientThickness": 12,
      "titlePadding": 10,
      "titleOrient": "left",
      "titleAnchor": "end",
      "direction": "horizontal",
      "labelColor": "white"
    }
  ],

  "config": {
    "legend": {"layout": {"anchor": "middle"}}
  }
}
